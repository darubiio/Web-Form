<!doctype html>
<html lang="en">
  <head>
    <title>Title</title>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
  </head>
  <body>

    <nav class="nav justify-content-center">
      <a class="nav-link active" href="#">Web Form</a>
    </nav>
    
    <div class='row'>
        <div class='col form-group'>
            <form action="/adicionar-producto" method="POST">
            <div class="mb-2 m-4">
            <input type="text" class="form-control" name="nombre" id="exampleFormControlInput1" placeholder="Nombre">
            </div>
            <div class="mb-2 m-4">
            <input type="number" class="form-control" name="cantidad" id="exampleFormControlInput1" placeholder="Cantidad">
            </div>
            <div class="mb-2 m-4">
            <input type="number" class="form-control" name="precio" id="exampleFormControlInput1" placeholder="Precio">
            </div>            
            <div class="mb-2 m-4">
            <select class="form-select form-control" name="categoria" aria-label="Default select example">
                <option selected>Seleccione Categor√≠a</option>
                <option value="1">Carrito</option>
                <option value="2">Favoritos</option>
                </select>
            </div>
            <button type="submit" class="btn">Enviar</button>
            </form>
        </div>


    </div>
    <div class='row'>
        <div class='col-6'>
            <h5>Favoritos</h5>
            <% for( let i = 0; i < favoritos.length; i++ ) { %>
        <div class="card mt-4 m-2 shadow" style="width: 18rem;">
        <div class="card-body">
            <h5 class="card-title"><%=  favoritos[i].nombre %></h5>
            <span class="card-text">$ <%=  favoritos[i].precio %></span>            
        </div>
        </div>
    <% } %>
        </div>
        <div class='col-6'>
            <h5>Carrito</h5>
            <% for( let i = 0; i < carrito.length; i++ ) { %>
        <div class="card col mt-4 m-2 shadow" style="width: 18rem;">
        <div class="card-body">
            <h5 class="card-title"><%=  carrito[i].nombre %></h5>
            <span class="card-text"><%=  carrito[i].cantidad %> disponibles</span>
            <span class="card-text">$ <%=  carrito[i].precio %></span>            
            </div>
        </div>
    <% } %>
            
            <p class='text-danger car-body'>Subtotal: <%= subtotal %> </p>
        
        
        </div>        

    </div>
    
      
    <!-- Optional JavaScript -->
    <!-- jQuery first, then Popper.js, then Bootstrap JS -->
    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js" integrity="sha384-UO2eT0CpHqdSJQ6hJty5KVphtPhzWj9WO1clHTMGa3JDZwrnQq4sF86dIHNDz0W1" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js" integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM" crossorigin="anonymous"></script>
  </body>
</html>